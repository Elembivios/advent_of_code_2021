            "env": {"RUST_BACKTRACE": "1"},
            "args": ["22", "--example"],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"],
            "terminal":"integrated",
            "stdio": null  
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'advent_of_code'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=advent_of_code",
                    "--package=advent_of_code"
                ],
                "filter": {
                    "name": "advent_of_code",
                    "kind": "bin"
                }
            },
            "args": ["12"],
            "cwd": "${workspaceFolder}"
        }
